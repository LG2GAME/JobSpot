{
  "name": "jobspot-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rimraf node_modules **/node_modules **/dist **/.next **/.turbo",
    "db:up": "docker compose -f infra/db/docker-compose.yml up -d",
    "db:down": "docker compose -f infra/db/docker-compose.yml down",
    "db:reset": "docker compose -f infra/db/docker-compose.yml down -v && pnpm db:up",
    "prisma:generate": "turbo run prisma:generate",
    "update-readme": "tsx readmeUpdate.ts",
    "postinstall": "turbo run prisma:generate"
  },
  "devDependencies": {
    "turbo": "^2.6.1",
    "rimraf": "^6.1.2",
    "concurrently": "^8.2.2",
    "tsx": "^4.20.6",
    "@types/node": "^24.10.1"
  },
  "packageManager": "pnpm@9.12.2",
  "engines": {
    "node": ">=20.0.0"
  }
}
