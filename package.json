{
  "name": "jobspot-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "update-readme": "tsx readmeUpdate.ts",
    "install:all": "npm install",
    "dev:backend": "npm --prefix apps/backend run dev",
    "dev:frontend": "npm --prefix apps/frontend run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "db:up": "docker compose -f infra/db/docker-compose.yml up -d",
    "db:down": "docker compose -f infra/db/docker-compose.yml down"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "@types/node": "^24.10.1",
    "tsx": "^4.0.0"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "ignore": "^7.0.5"
  }
}
